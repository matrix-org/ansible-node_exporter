[Unit]
Description="Prometheus Metrics Exporter (node_exporter)"

[Service]
Type=simple
WorkingDirectory=/opt/node_exporter
ExecStart=/opt/node_exporter/releases/node_exporter-{{ node_exporter_version }}.linux-amd64/node_exporter --collector.systemd --collector.textfile.directory=/opt/node_exporter/textfile
User=prometheus
Group=prometheus
Restart=always
StandardOutput=syslog
SyslogIdentifier=node_exporter

[Install]
WantedBy=default.target
